<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver">
		</property>
		<property name="url"
			value="jdbc:mysql://127.0.0.1:3306/vulgame?useUnicode=true&amp;characterEncoding=UTF-8&amp;autoReconnect=true">
		</property>
		<property name="username" value="root"></property>
		<property name="password" value=""></property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" ></ref>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
				<prop key="hibernate.connection.url">jdbc:mysql://localhost:3306/vulgame</prop>
				<prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
				<prop key="hibernate.autoReconnect">true</prop>
 				<!--<prop key="hibernate.show_sql">true</prop>-->
<!-- 				<prop key="hibernate.format_sql">true</prop> -->
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>com/vo/Users.hbm.xml</value>
				<value>com/vo/Bill.hbm.xml</value>
				<value>com/vo/Business.hbm.xml</value>
				<value>com/vo/Lockrecord.hbm.xml</value>
				<value>com/vo/Va.hbm.xml</value>
				<value>com/vo/Items.hbm.xml</value>
			</list>
		</property>
	</bean>
	<bean id="usersDAO" class="com.dao.UsersDAO" scope="prototype">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="billDAO" class="com.dao.BillDAO" scope="prototype">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="businessDAO" class="com.dao.BusinessDAO" scope="prototype">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="lockrecordDAO" class="com.dao.LockrecordDAO" scope="prototype">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="valueAddDAO" class="com.dao.ValueAddDAO" scope="prototype">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property>
	</bean>

	<!-- IOC Service -->
	<bean id="usersService" class="com.service.UsersService" scope="prototype">
		<property name="usersDAO" ref="usersDAO" />
	</bean>


	<bean id="billService" class="com.service.BillService" scope="prototype">
		<property name="billDAO" ref="billDAO" />
		<property name="userDAO" ref="usersDAO" />
	</bean>
	<bean id="businessService" class="com.service.BusinessService"
		scope="prototype">
		<property name="businessDAO" ref="businessDAO" />
	</bean>

	<bean id="lockrecordService" class="com.service.LockrecordService"
		scope="prototype">
		<property name="lockrecordDAO" ref="lockrecordDAO" />
	</bean>
	<bean id="valueAddService" class="com.service.ValueAddService" scope="prototype">
		<property name="valueAddDAO" ref="valueAddDAO" />
	</bean>



	<!-- IOC Action -->
	<bean name="billAction" class="com.action.BillAction" scope="prototype">
		<property name="billService" ref="billService" />
	</bean>

	<bean name="usersAction" class="com.action.UsersAction" scope="prototype">
		<property name="usersService" ref="usersService" />
		<property name="lockrecordService" ref="lockrecordService" />
	</bean>


	<bean name="businessAction" class="com.action.BusinessAction"
		scope="prototype">
		<property name="businessService" ref="businessService" />
		<property name="usersService" ref="usersService" />
	</bean>
	<bean name="valueAddAction" class="com.action.ValueAddAction" scope="prototype">
		<property name="valueAddService" ref="valueAddService" />
		<property name="usersService" ref="usersService" />

	</bean>


</beans>